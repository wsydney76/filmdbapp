<?xml version='1.0' encoding='utf-8'?>
<widget id="com.svt.filmdb" version="1.0.0"
	xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>filmDB</name>
	<description>
		filmDB APP
	</description>
	<author email="dev@cordova.apache.org" href="http://cordova.io">
		Me
	</author>
	<content src="index.html" />
	<plugin name="cordova-plugin-whitelist" spec="1" />
	<access origin="*" />
	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<platform name="android">

		<!-- cordova plugin add cordova-plugin-statusbar -->
		<preference name="StatusBarBackgroundColor" value="#2196F3" />

		<preference name="Orientation" value="portrait" />

		<icon src="res/movies.png" />

		<!-- cordova plugin add cordova-plugin-splashscreen -->
		<splash src="res/splash.png" density="port-hdpi" />
		<splash src="res/splash.png" density="port-ldpi" />
		<splash src="res/splash.png" density="port-mdpi" />
		<splash src="res/splash.png" density="port-xhdpi" />

		<preference name="SplashScreen" value="screen" />
		<preference name="AutoHideSplashScreen" value="true" />
		<preference name="SplashScreenDelay" value="5000" />
		<preference name="SplashShowOnlyFirstTime" value="false" />
	</platform>
</widget>
